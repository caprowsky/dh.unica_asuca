<% content_for :status_bar do %>
  <h2><%= status_bar_context %></h2>
  <div id="links">
    <%= link_to_index t('index_editors'), editors_path %>
  </div>
<% end %>

<div class="span9">
  <div class="row">
    <div class="span2">
      <label><%= t('editors_first_name') %></label>
    </div>
    <div class="span2">
      <label><%= t('editors_last_name') %></label>
    </div>
    <div class="span2">
      <label><%= t('editors_qualifier') %></label>
    </div>
  </div>
  <div class="row">
    <div class="span2">
      <%= @editor.first_name %>
    </div>
    <div class="span2">
      <%= @editor.last_name %>
    </div>
    <div class="span2">
      <%= @editor.qualifier %>
    </div>
  </div>
</div>
<div class="span3">
  <p><%= link_to t('edit'), edit_editor_path(@editor), :class => "btn btn-primary" %></p>
</div>