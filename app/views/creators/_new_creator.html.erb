<%# Upgrade 2.2.0 inizio %>
<div class="modal hide fade" id="add_creator_modal">
  <div class="modal-header">
    <a class="close close_creator" data-dismiss="modal">×</a>
    <h3>Nuovo soggetto produttore</h3>
  </div>
  <div class="modal-body">
    <div>
      <% if current_user.is_multi_group_user?() %>
        <div style="text-align: justify;">
          Per eseguire l'operazione è necessario selezionare il gruppo cui associare il nuovo soggetto produttore scegliendolo tra i gruppi associati all'utente corrente.
        </div>
        <div style="margin-top: 10px;">
          <%= label_tag :group_id, raw(t('devise.attributes.group_id') + required_marker + '<span class="inline-msg hide">obbligatorio</span>'), :class => "control-label" %>            
          <%= select :creator, :group_id, rel_user_groups_select(current_user.rel_user_groups), {:prompt => t('devise.attributes.group_id_prompt'), :selected => current_user.rel_user_groups[0].group_id} %>
        </div>
      <% else %>
        <%= hidden_field_tag 'creator[group_id]', current_ability.target_group_id %>
      <% end %>
    </div>

    <div style="margin-top: 20px;">
      <div style="text-align: justify;">
        Selezionare la tipologia del soggetto produttore
      </div>
      <div style="margin-top: 10px;">
        <%= label_tag :creator_type, raw(t('creator_type') + required_marker + '<span class="inline-msg hide">obbligatorio</span>') %>
        <select id="creator_creator_type"">
          <option value="C"><%= t('C') %></option>
          <option value="P"><%= t('P') %></option>
          <option value="F"><%= t('F') %></option>
        </select>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">Annulla</button>
    <button id="create_creator" class="submit btn btn-primary">Crea scheda</button>
  </div>
</div>
<%# Upgrade 2.2.0 fine %>
